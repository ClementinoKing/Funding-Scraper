                      )}
                      {formData.website && (
                        <p><span className="text-muted-foreground">Website:</span> <a href={formData.website} target="_blank" rel="noopener noreferrer" className="text-primary hover:underline">{formData.website}</a></p>
                      )}
                      {formData.taxNumber && (
                        <p><span className="text-muted-foreground">Tax Number:</span> {formData.taxNumber}</p>
                      )}
                      {formData.vatNumber && (
                        <p><span className="text-muted-foreground">VAT Number:</span> {formData.vatNumber}</p>
                      )}
                      {formData.contactPerson && (
                        <p><span className="text-muted-foreground">Contact Person:</span> {formData.contactPerson}</p>
                      )}
                    </div>
                  </div>

                  {/* Business Metrics */}
                  <div className="bg-white dark:bg-slate-800 p-4 rounded-lg border border-slate-200 dark:border-slate-700 shadow-sm">
                    <h4 className="font-semibold mb-3 text-base flex items-center gap-2">
                      <div className="w-1 h-5 bg-primary rounded-full"></div>
                      Business Metrics
                    </h4>
                    <div className="space-y-1 text-sm">
                      <p><span className="text-muted-foreground">Annual Revenue:</span> {getRevenueLabel(formData.annualRevenue)}</p>
                      <p><span className="text-muted-foreground">Number of Employees:</span> {getEmployeeLabel(formData.numberOfEmployees)}</p>
                      {formData.beeLevel && (
                        <p><span className="text-muted-foreground">BEE Level:</span> {getBeeLevelLabel(formData.beeLevel)}</p>
                      )}
                    </div>
                  </div>

                  {/* Funding Requirements */}
                  <div className="bg-white dark:bg-slate-800 p-4 rounded-lg border border-slate-200 dark:border-slate-700 shadow-sm">
                    <h4 className="font-semibold mb-3 text-base flex items-center gap-2">
                      <div className="w-1 h-5 bg-primary rounded-full"></div>
                      Funding Requirements
                    </h4>
                    <div className="space-y-1 text-sm">
                      <p><span className="text-muted-foreground">Funding Amount Needed:</span> {getRevenueLabel(formData.fundingAmountNeeded)}</p>
                      <p><span className="text-muted-foreground">Timeline:</span> {getTimelineLabel(formData.timeline)}</p>
                      <p><span className="text-muted-foreground">Purpose of Funding:</span></p>
                      <p className="pl-4 text-sm whitespace-pre-wrap">{formData.purposeOfFunding || 'Not specified'}</p>
                      <p><span className="text-muted-foreground">Previous Funding:</span> {formData.previousFundingHistory ? 'Yes' : 'No'}</p>
                      {formData.previousFundingHistory && formData.previousFundingDetails && (
                        <p className="pl-4 text-sm whitespace-pre-wrap"><span className="text-muted-foreground">Details:</span> {formData.previousFundingDetails}</p>
                      )}
                      <p><span className="text-muted-foreground">Sectors of Interest:</span> {formData.sectors.length > 0 ? formData.sectors.join(', ') : 'None'}</p>
                      <p><span className="text-muted-foreground">Funding Types:</span> {formData.fundingTypes.length > 0 ? formData.fundingTypes.join(', ') : 'None'}</p>
                    </div>
                  </div>
                </div>
              </div>
            )}

            {/* Navigation Buttons */}
            <div className="flex items-center justify-between mt-8 pt-6 border-t border-slate-200 dark:border-slate-800">
              <div>
                {currentStep > 1 && (
                  <Button
                    type="button"
                    variant="outline"
                    onClick={handleBack}
                    disabled={loading}
                    className="px-6 h-11 border-2 hover:bg-slate-50 dark:hover:bg-slate-800"
                  >
                    <ArrowLeft className="w-4 h-4 mr-2" />
                    Back
                  </Button>
                )}
              </div>
              <div className="flex gap-3">
                {currentStep < STEPS.length ? (
                  <Button
                    type="button"
                    onClick={handleNext}
                    disabled={loading}
                    className="px-8 h-11 bg-gradient-to-r from-primary to-primary/90 hover:from-primary/90 hover:to-primary shadow-lg hover:shadow-xl transition-all"
                  >
                    Next
                    <ArrowRight className="w-4 h-4 ml-2" />
                  </Button>
                ) : (
                  <Button
                    type="submit"
                    disabled={loading}
                    className="px-8 h-11 bg-gradient-to-r from-primary to-primary/90 hover:from-primary/90 hover:to-primary shadow-lg hover:shadow-xl transition-all"
                  >
                    {loading ? (
                      <>
                        <span className="animate-spin mr-2">⏳</span>
                        Creating Account...
                      </>
                    ) : (
                      <>
                        Complete Setup
                        <CheckCircle2 className="w-4 h-4 ml-2" />
                      </>
                    )}
                  </Button>
                )}
              </div>
            </div>
          </form>
        </CardContent>
      </Card>
    </div>
  )
}

